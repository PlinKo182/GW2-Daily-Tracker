{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "MONGO_URL": "@mongo-url",
    "DB_NAME": "@db-name"
  },
  "build": {
    "env": {
      "REACT_APP_BACKEND_URL": "https://your-app-name.vercel.app"
    }
  }
}